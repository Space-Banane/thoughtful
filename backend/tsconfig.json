{
	"compilerOptions": {
		"module": "node16",
		"strict": true,
		"moduleResolution": "node16",
		"lib": ["ES2022"],
		"pretty": true,
		"alwaysStrict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": false,
		"esModuleInterop": true,
		"target": "ES2022",
		"outDir": "dist",
		"sourceMap": true,
		"removeComments": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src/**/*"]
}